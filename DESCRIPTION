Package: pQTLtools
Type: Package
Title: A Protein Quantitative Trait Locus Toolkit
Version: 0.4
Date: 2024-10-9
Authors@R: c(
    person("Jing Hua", "Zhao", , "jinghuazhao@hotmail.com", role = c("aut", "cre"),
      comment = c(ORCID = "0000-0002-1463-5870", "0000-0003-4930-3582")
